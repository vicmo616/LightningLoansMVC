@model LightningLoansMVC.Models.Loan


@{
}

@{
    ViewData["Title"] = "App Page";
}

<div class="container">
    <h1 class="mb-2">Loan Calculator</h1>

    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col">
            <form asp-controller="Home" asp-action="App" method="post">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Amount">Loan Amount:</label>
                        <input type="number" class="form-control" id="lamount" min="1000" step="500" value="@Model.Amount" asp-for="Amount" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Term">Term:</label>
                        <input type="number" class="form-control" id="lterm" min="1" value="@Model.Term" asp-for="Term" />
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Rate">Rate:</label>
                        <input type="number" class="form-control" id="lrate" min="1" step=".5" value="@Model.Rate" asp-for="Rate" />
                    </div>
                </div>
                <button type="submit" class="btn btn-cfOrange mt-2 mb-4">Calculate</button>
            </form>
        </div>
        <div class="col">
            <div id="paymentTitle">
                <p>Your Monthly Payments</p>
            </div>
            <p id="payment">
                @Model.Payment.ToString("C")
            </p>
            <div class="row">
                <div class="col-6">
                    <label class="text-left">Total Principle</label>
                </div>
                <div class="col-6 text-right" id="totalPrinciple">
                    @Model.Amount.ToString("C")
                </div>
                <div class="col-6">
                    <label class="text-left">Total interest</label>
                </div>
                <div class="col-6 text-right" id="totalInterest">
                    @Model.Amount.ToString("C")
                </div>
                <div class="col-6">
                    <label class="text-left">Total Cost</label>
                </div>
                <div class="col-6 text-right" id="totalCost">
                    @Model.TotalCost.ToString("C")
                </div>
            </div>
        </div>
    </div>
    @if (Model.Payments.Count > 0)
    {
        <div class="row table-responsive">
            <div class="col">
                <table id="scheduleTable" class="table table-striped table-hover mb-5">
                    <thead class="text-dark">
                        <tr>
                            <th>Month</th>
                            <th>Payment</th>
                            <th>Principle</th>
                            <th>Interest</th>
                            <th>Total Interest</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Payments)
                        {
                            <tr>
                                <td>@item.Month</td>
                                <td>@item.Payment.ToString("C")</td>
                                <td>@item.MonthlyPrinciple.ToString("C")</td>
                                <td>@item.MonthlyInterest.ToString("C")</td>
                                <td>@item.TotalInterest.ToString("C")</td>
                                <td>@item.Balance.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }


</div>